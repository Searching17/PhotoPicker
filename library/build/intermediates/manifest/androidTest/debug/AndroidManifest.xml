<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seakun.photopicker.test" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.seakun.photopicker.test"
        android:targetPackage="com.seakun.photopicker.test" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="com.seakun.photopicker.activity.PhotoPickerActivity"
            android:theme="@style/PhotoPickerTheme" />
        <activity
            android:name="com.seakun.photopicker.activity.PhotoPreviewActivity"
            android:theme="@style/PhotoPickerTheme" />
        <activity
            android:name="com.seakun.photopicker.activity.GalleryActivity"
            android:theme="@style/PhotoPickerTheme" />
    </application>

</manifest>